<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.codebehind.mrslmaintenance.EquipmentCameraActivity$PlaceholderFragment">

    <LinearLayout android:id="@+id/crime_camera_preview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <SurfaceView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/equipment_camera_surfaceview" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take picture"
            android:id="@+id/equipment_camera_button" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/equipment_camera_progressContainer"
        android:clickable="true">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@android:style/Widget.ProgressBar.Large"
            android:id="@+id/equipment_camera_progressBar" />
    </FrameLayout>

</FrameLayout>
